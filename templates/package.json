{
  "main": "./lib/index.js",
  "module": "./lib/index.js",
  "exports": "./lib/index.js",
  "license": "MPL-2.0",
  "type": "module",
  "files": [
    "lib",
    "docs",
    "logo.svg",
    "logo-dark.svg"
  ],
  "scripts": {
    "package:sync": "cd ../../ && pnpm package:sync",
    "package:update": "cd ../../ && pnpm package:update",
    "precommit": "lint-staged",
    "build:test": "rm -rf lib/ && tsc -p tsconfig.test.json",
    "build": "rm -rf lib/ && tsc -p tsconfig.build.json --noEmit && rollup -c",
    "dev": "tsc -p tsconfig.build.json --watch --preserveWatchOutput --incremental",
    "lint": "eslint --ext .ts src",
    "lint:report": "pnpm lint --format json --output-file report.json",
    "test": "pnpm build:test && NODE_OPTIONS=--experimental-vm-modules jest",
    "test:coverage": "pnpm run test --coverage --silent",
    "prepack": "pnpm build"
  },
  "dependencies": {
    "@logto/connector-kit": "1.0.0-rc.2",
    "@silverhand/essentials": "2.1.0",
    "got": "^12.5.3",
    "snakecase-keys": "^5.1.0",
    "zod": "^3.20.2"
  },
  "devDependencies": {
    "@jest/types": "^29.3.1",
    "@rollup/plugin-commonjs": "^24.0.0",
    "@rollup/plugin-json": "^6.0.0",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@rollup/plugin-typescript": "^10.0.1",
    "@silverhand/eslint-config": "1.3.0",
    "@silverhand/ts-config": "1.2.1",
    "@silverhand/jest-config": "1.2.2",
    "@types/jest": "^29.2.4",
    "@types/node": "^16.3.1",
    "@types/supertest": "^2.0.11",
    "eslint": "^8.21.0",
    "jest": "^29.3.1",
    "jest-matcher-specific-error": "^1.0.0",
    "lint-staged": "^13.0.0",
    "nock": "^13.2.2",
    "prettier": "^2.8.1",
    "rollup": "^3.8.0",
    "rollup-plugin-summary": "^2.0.0",
    "supertest": "^6.2.2",
    "typescript": "^4.9.4"
  },
  "engines": {
    "node": "^16.13.0 || ^18.12.0"
  },
  "eslintConfig": {
    "extends": "@silverhand"
  },
  "prettier": "@silverhand/eslint-config/.prettierrc",
  "publishConfig": {
    "access": "public"
  }
}
